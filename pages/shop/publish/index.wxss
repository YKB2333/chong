/* pages/shop/publish/index.wxss */
.form-group-imgs-name {padding: 20rpx 0;overflow: hidden;}
.form-group-imgs-left {float: left;font-size: 26rpx;}
.form-group-imgs-right {float: right;color: #939393;}
.form-group-imgs {padding: 20rpx 0;overflow: hidden;}
.form-group-imgs-item  {display: block;position: relative;float: left;width: 24%;height: 0;padding-bottom: 24%;margin-right: 1.3333%;overflow: hidden;border-radius: 10rpx;}
.form-group-imgs-item:nth-child(4n) {margin-right: 0;}
.form-group-imgs-item  image {position: absolute;width: 100%;height: 100%;border-radius: 10rpx;}


.grid {
	display: flex;
	flex-wrap: wrap;
}

.grid.grid-square {
	overflow: hidden;
}
.flex-sub {
  flex: 1;
}
.grid.col-4.grid-square>view {
	padding-bottom: calc((100% - 60rpx)/4);
	height: 0;
	width: calc((100% - 60rpx)/4);
}
.grid.grid-square>view {
	margin-right: 20rpx;
	margin-bottom: 20rpx;
	border-radius: 6rpx;
	position: relative;
	overflow: hidden;
}
.grid.col-4>view {
	width: 25%;
}