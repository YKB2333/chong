/* pages/trends/publish/index.wxss */
/* 发布动态 */
.info-creat  {padding:0 20rpx 20rpx 20rpx;background: #fff;}
.create-content{padding:20rpx 0;}
.create-content textarea {width: 100%;height:180rpx;}
.create-attribute {overflow:hidden;margin: 10rpx 0;height: 40rpx;}
.create-topic {overflow: hidden;margin-right:20rpx;float: left;}
.create-topic text{font-size: 20rpx;background:linear-gradient(to right,#FBD343,#f7e5a4);border-radius: 40rpx;padding:10rpx 20rpx;line-height: 40rpx;height: 40rpx;}

.image-list {overflow:hidden;padding-top: 20rpx;}
.images-picker {display: block;position: relative;float: left;width: 32%;height: 0;padding-bottom: 32.5%;margin-right: 1.335%;overflow: hidden;margin-bottom: 1.335%;border:1rpx solid #c8c8c8;}
.tpsc {width: 60rpx;height:60rpx;margin-left:36%;margin-top: 30%;}
.choose_text  {width: 100%;float: left;text-align: center;color:#ccc;font-size: 24rpx;}
.images-picker:last-child{margin-right: 0;}
.image-delete {float: right;width: 25rpx;height: 25rpx;position:relative;z-index:1;background: #000;color: #fff;padding: 2rpx;}
.images-preview {display: block;position: relative;float: left;width: 32%;height: 0;padding-bottom: 32.5%;margin-right: 1.335%;overflow: hidden;margin-bottom: 1.335%;}
.images-preview:last-child{margin-right: 0;}
.images-preview image {position: absolute;width: 100%;height: 100%;}


.video-preview {display: block;position: relative;float: left;width: 100%;height: 66%;overflow: hidden;margin-bottom: 1.335%;}
.video-preview image {position: absolute;width: 100%;height: 100%;}
video {width:100%;}

.form-wapr {padding:0 20rpx;background: #ffffff;margin-bottom: 20rpx;}
.form-border-top {border-top: 1rpx solid #e6e6e6;}