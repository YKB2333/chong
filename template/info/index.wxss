/* template/info/index.wxss */
/* icon*/
.icon-weizhi {font-size: 20rpx;color: #FFD50B;margin-right: 4rpx;}
.icon-sandian-copy {font-size: 20rpx;color: #939393;}
/* 信息列表 */
.info-list {padding:20rpx 30rpx;display:flex;}
.info-list .left {margin-right:20rpx;width: 50%;display: inline-block;vertical-align: top;}
.info-list .right {width: 50%;display: inline-block;vertical-align: top;}
.info-item {box-sizing: border-box;margin-bottom:20rpx;position: relative;background: #fff;overflow: hidden;border-radius: 20rpx;}

.info-head {margin-bottom: 10rpx;}
.info-img {width: 100%;max-height: 500rpx;}
.info-img image {width: 100%;max-height: 500rpx;}
.info-video {width: 100%;height:450rpx;}
.info-video video{width: 100%;height:100%;border-top-left-radius: 20rpx;border-top-right-radius: 20rpx;}
.info-area {top: 20rpx;left: 20rpx;position: absolute;font-size: 20rpx;background-color:rgba(17, 17, 17, 0.6);padding: 10rpx 16rpx;border-radius: 20rpx;color:#fff;}
.info-dis {color:#FFD50B;}
.icon-video { top: 35%;left: 50%;transform: translate(-50%, -50%);position: absolute;font-size:50rpx;color:#fff;}

.info-main {padding: 0 20rpx;margin-bottom: 20rpx;}
.info-category {padding: 5rpx 10rpx;margin-right: 10rpx;background-image: linear-gradient(45deg, #ff785c, #fc2b79) !important;font-size: 20rpx;border-radius: 20rpx;color:#fff;}
.info-content {max-height: 70rpx;line-height: 36rpx;overflow: hidden;text-overflow: ellipsis;margin-bottom: 20rpx;font-weight: 600;}
.info-centre {overflow: hidden;margin: 30rpx 0;height: 30rpx;line-height: 30rpx;}
.info-price {font-size: 28rpx;font-weight: 600;color: #f00;float: left;}
.info-price taxt{font-size: 18rpx;margin-right: 4rpx;}
.info-Collection {font-size: 20rpx;color: #939393;float: right;}
.info-footer {overflow: hidden;padding: 0 20rpx;margin-bottom: 20rpx;}
.info-avatar {float: left;width: 40rpx;height: 40rpx;border-radius: 50%;margin-right: 10rpx;}
.info-avatar image {width: 100%;height: 100%;border-radius: 50%;}
.info-nickName {float: left;height: 40rpx;line-height: 40rpx;font-size: 20rpx;}
.info-like {float: right;width: 40rpx;height: 40rpx;line-height: 40rpx;text-align: right;}