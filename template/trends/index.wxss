/* template/trends/index.wxss */
/* 动态列表 */
.cd-list {padding: 20rpx 30rpx;}
.cd-item {background:#FFFFFF;padding:30rpx 20rpx;margin-bottom: 20rpx;overflow: hidden;border-radius: 20rpx;}
.cd-head {margin-bottom: 25rpx;overflow: hidden;}
.cd-avatar {float: left;margin-right: 20rpx;width: 70rpx;height: 70rpx;}
.cd-avatar image {width: 100%;height: 100%;border-radius: 50%;}
.cd-centre {float: left;}
.cd-nickname {height: 40rpx;line-height: 40rpx;font-weight: bold;display: flex;}
.cd-info {font-size: 18rpx;color: #939393;height: 30rpx;line-height: 30rpx;}
.cd-follow {float: right;}
.cd-follow-button  {font-size: 20rpx;margin-top: 10rpx;border: 1rpx solid #474747;border-radius:10rpx;width: 100rpx;height: 48rpx;line-height: 48rpx;text-align: center;}
.cd-title {max-height: 70rpx;line-height: 36rpx;overflow: hidden;text-overflow: ellipsis;margin-bottom: 20rpx;}
.cd-topic {overflow: hidden;margin-bottom: 20rpx;}
.cd-topic text{font-size: 20rpx;background:linear-gradient(to right,#FBD343,#f7e5a4);border-radius: 40rpx;padding:10rpx 20rpx;line-height: 40rpx;height: 40rpx;}
.cd-video {width: 100%;height: 340rpx;border-radius: 10rpx;margin-bottom: 20rpx;}
.cd-video video{width: 100%;height:100%;border-radius: 10rpx;}
.cd-images {overflow: hidden;margin-bottom: 20rpx;}
.cd-img {display: block;position: relative;float: left;width: 32%;height: 0;padding-bottom: 32%;margin-right: 2%;overflow: hidden;margin-bottom: 1.25%;border-radius: 10rpx;}
.cd-img:nth-child(3n) {margin-right: 0;}
.cd-img image {position: absolute;width: 100%;height: 100%;border-radius: 10rpx;}
.cd-type {top: 10rpx;right: 10rpx;position: absolute;font-size: 24rpx;background-color: #000;opacity: 0.4;width: 40rpx;height: 40rpx;border-radius: 50%;color: #fff;text-align: center;}
.cd-area {display: flex;margin: 0 10rpx 20rpx 10rpx;text-align: bottom;}
.cd-footer {overflow: hidden;color: #939393;}
.cd-footer .cd-bg {background: #f2f2f4;float: left;margin-right: 20rpx;width: 140rpx;height: 50rpx;line-height: 50rpx;text-align: center;border-radius: 10rpx;font-size: 20rpx;}
.cd-bg2 {background: #f2f2f4;float: right;width: 80rpx;height: 50rpx;line-height: 50rpx;text-align: center;border-radius: 10rpx;color: #aeaebd;font-size: 20rpx;}
.cd-footer .cd-bg text {margin-left: 10rpx;}